<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".SafetySettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/padding_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/safety_settings"
                android:textSize="@dimen/text_size_xl"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/iv_back_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content Filtering Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/content_filtering"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Violence Filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/violence_filter"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_violence_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

                <!-- Inappropriate Language Filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/inappropriate_language_filter"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_language_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

                <!-- Age Inappropriate Content Filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/age_inappropriate_filter"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_age_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Screen Time Management -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_time_management"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/daily_time_limit"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_time_limit_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 min"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/accent_primary"
                        android:textStyle="bold" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_time_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="180"
                    android:progress="60"
                    android:progressTint="@color/accent_primary"
                    android:thumbTint="@color/accent_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_time_description"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_tertiary"
                    android:layout_marginTop="@dimen/margin_small" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Privacy Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_settings"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- On-Device Processing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/on_device_processing"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_on_device_processing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

                <!-- Data Retention -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/data_retention_30_days"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 days"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/accent_primary" />

                </LinearLayout>

                <!-- Third Party Sharing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/third_party_sharing"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_third_party_sharing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Safe Zones Configuration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/safe_zones"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_add_safe_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_zone"
                        android:textSize="@dimen/text_size_small"
                        android:background="@drawable/btn_primary_background"
                        android:textColor="@color/text_white"
                        android:padding="@dimen/padding_small" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_safe_zones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_safe_zone"
                    tools:itemCount="3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Emergency Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_settings"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Emergency Contact -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_phone"
                        android:layout_marginEnd="@dimen/margin_small" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/emergency_contact"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_emergency_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91-XXXX-XXXX"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/accent_primary" />

                </LinearLayout>

                <!-- Panic Button -->
                <Button
                    android:id="@+id/btn_panic_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_panic_mode"
                    android:textSize="@dimen/text_size_medium"
                    android:background="@drawable/btn_danger_background"
                    android:textColor="@color/text_white"
                    android:padding="@dimen/padding_medium"
                    android:drawableStart="@drawable/ic_warning"
                    android:drawablePadding="@dimen/padding_small" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Location Tracking -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location_tracking"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Location Services -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_location_tracking"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_location_tracking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

                <!-- Location History -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/save_location_history"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_location_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

                <!-- Geofencing Alerts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/geofencing_alerts"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_secondary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_geofencing_alerts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/switch_thumb"
                        android:track="@drawable/switch_track" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Blocked Content Log -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/blocked_content_log"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_blocked_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_white"
                        android:background="@drawable/badge_danger_background"
                        android:padding="@dimen/padding_xs"
                        android:minWidth="@dimen/badge_min_width"
                        android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_latest_blocked_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latest_blocked_attempt"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_tertiary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <Button
                    android:id="@+id/btn_view_full_log"
                    style="@style/ButtonSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_full_log"
                    android:drawableEnd="@drawable/ic_arrow_forward" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
