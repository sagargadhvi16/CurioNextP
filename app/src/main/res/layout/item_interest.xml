<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/interest_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with category and trend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/interest_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="How Things Work"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <!-- Trend Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/trend_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_trending_up"
                    app:tint="@color/interest_positive" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/trend_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="increasing"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="@color/interest_positive"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Topic Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/interest_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dinosaurs & Fossils"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/on_surface"
            android:textStyle="bold" />

        <!-- Interest Level Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Level"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/on_surface_variant" />

            <!-- Progress Bar -->
            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_progress_track" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/interest_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.5"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/primary"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Progress Indicator -->
        <View
            android:id="@+id/level_indicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_interest_level_indicator" />

        <!-- Keywords/Tags (if available) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/keywords_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacingHorizontal="4dp"
            app:chipSpacingVertical="2dp">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fossils"
                android:textSize="10sp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="extinction"
                android:textSize="10sp" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
