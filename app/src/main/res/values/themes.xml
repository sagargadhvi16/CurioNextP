<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="CurioNextTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/curio_blue</item>
        <item name="colorPrimaryVariant">@color/curio_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/curio_orange</item>
        <item name="colorSecondaryVariant">@color/curio_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/status_bar_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/navigation_bar_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window Properties -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Custom Attributes -->
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="overlayBackgroundColor">@color/overlay_light</item>
    </style>

    <!-- Dark Theme -->
    <style name="CurioNextTheme.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/curio_blue_light</item>
        <item name="colorPrimaryVariant">@color/curio_blue</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/curio_orange_light</item>
        <item name="colorSecondaryVariant">@color/curio_orange</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error_red_light</item>
        <item name="colorOnError">@color/text_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/navigation_bar_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window Properties -->
        <item name="android:windowBackground">@color/background_dark</item>
        
        <!-- Custom Attributes -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="dividerColor">@color/divider_dark</item>
        <item name="overlayBackgroundColor">@color/overlay_dark</item>
    </style>

    <!-- Child-Friendly Theme -->
    <style name="CurioNextTheme.ChildMode" parent="CurioNextTheme">
        <item name="colorPrimary">@color/child_primary</item>
        <item name="colorSecondary">@color/child_secondary</item>
        <item name="android:windowBackground">@color/child_background</item>
        <item name="colorSurface">@color/child_card_background</item>
        <!-- Larger touch targets for children -->
        <item name="minTouchTargetSize">@dimen/child_touch_target_size</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_curio_logo_animated</item>
        <item name="windowSplashScreenAnimationDuration">@integer/splash_duration</item>
        <item name="postSplashScreenTheme">@style/CurioNextTheme</item>
    </style>

    <!-- Onboarding Theme -->
    <style name="OnboardingTheme" parent="CurioNextTheme">
        <item name="android:windowBackground">@drawable/onboarding_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Safety Alert Theme -->
    <style name="SafetyAlertTheme" parent="CurioNextTheme">
        <item name="colorPrimary">@color/safety_alert_primary</item>
        <item name="colorSecondary">@color/safety_alert_secondary</item>
        <item name="android:windowBackground">@color/safety_alert_background</item>
        <item name="alertDialogTheme">@style/SafetyAlertDialog</item>
    </style>

    <style name="SafetyAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/safety_dialog_background</item>
        <item name="materialAlertDialogTitleTextStyle">@style/SafetyAlertDialogTitle</item>
    </style>

    <style name="SafetyAlertDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/safety_alert_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Interest Category Themes -->
    <style name="ScienceTheme" parent="CurioNextTheme">
        <item name="colorPrimary">@color/science_primary</item>
        <item name="colorSecondary">@color/science_secondary</item>
        <item name="android:windowBackground">@color/science_background</item>
    </style>

    <style name="CreativityTheme" parent="CurioNextTheme">
        <item name="colorPrimary">@color/creativity_primary</item>
        <item name="colorSecondary">@color/creativity_secondary</item>
        <item name="android:windowBackground">@color/creativity_background</item>
    </style>

    <style name="NatureTheme" parent="CurioNextTheme">
        <item name="colorPrimary">@color/nature_primary</item>
        <item name="colorSecondary">@color/nature_secondary</item>
        <item name="android:windowBackground">@color/nature_background</item>
    </style>

    <!-- Window Animation Styles -->
    <style name="WindowAnimationTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Widget Themes -->
    <style name="WidgetTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorBackground">@color/widget_background</item>
        <item name="android:textColorPrimary">@color/widget_text_primary</item>
        <item name="android:textColorSecondary">@color/widget_text_secondary</item>
    </style>

    <!-- Custom Attribute Definitions -->
    <declare-styleable name="CurioNextTheme">
        <attr name="cardBackgroundColor" format="color|reference" />
        <attr name="dividerColor" format="color|reference" />
        <attr name="overlayBackgroundColor" format="color|reference" />
        <attr name="safeZoneColor" format="color|reference" />
        <attr name="dangerZoneColor" format="color|reference" />
        <attr name="neutralZoneColor" format="color|reference" />
        <attr name="interestHighColor" format="color|reference" />
        <attr name="interestMediumColor" format="color|reference" />
        <attr name="interestLowColor" format="color|reference" />
    </declare-styleable>

</resources>
